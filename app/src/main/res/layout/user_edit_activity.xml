<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingEnd="30dp"
    android:paddingStart="30dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8">

        <EditText
            android:id="@+id/input_update_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John"
            android:textColor="@color/colorPrimary"
            android:hint="First name"
            android:backgroundTint="@color/colorPrimary"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_update_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doe"
            android:textColor="@color/colorPrimary"
            android:hint="Last name"
            android:backgroundTint="@color/colorPrimary"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_update_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="johndoe@clausematch.com"
            android:textColor="@color/colorPrimary"
            android:hint="Email"
            android:backgroundTint="@color/colorPrimary"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:fontFamily="sans-serif-light"
        android:text="PERMISSIONS"
        android:textColor="@color/colorSide"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/system_administration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="System Administration"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/create_templates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="Create Templates"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/create_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="Create Documents"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/create_metadata_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="Create Metadata fields"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/edit_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="Edit Documents"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/manage_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="Manage users"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/x_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X-Man"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <Button
        android:id="@+id/user_update_btn"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/rounded_btn"
        android:text="Update"
        android:textColor="@android:color/white" />

</LinearLayout>
